{
    "version": "3.0.0-rc-*",
    "description": "Exceptionless sink for Serilog",
    "authors": [ "Serilog Contributors" ],

    "packOptions": {
        "tags": [ "serilog", "Exceptionless", "logging" ],
        "projectUrl": "http://serilog.net",
        "releaseNotes": "https://github.com/serilog/serilog-sinks-exceptionless/releases",
        "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0",
        "iconUrl": "http://serilog.net/images/serilog-sink-nuget.png",
        "repository": {
            "type": "git",
            "url": "https://github.com/serilog/serilog-sinks-exceptionless"
        },
        "files": {
            "include": [ "readme.txt" ]
        }
    },

    "buildOptions": {
        "keyFile": "../../assets/Serilog.snk",
        "nowarn": [
            "CS1591"
        ],
        "optimize": true,
        "warningsAsErrors": true,
        "xmlDoc": true
    },
    "dependencies": {
        "Exceptionless.Signed": "4.0.1862-beta", 
        "Serilog": "2.0.0-rc-640"
    },
    "compilationOptions": {
        "keyFile": "../../assets/Serilog.snk"
    },
    "frameworks": {
        "net4.5": {},
        "netstandard1.2": {}
    }
}